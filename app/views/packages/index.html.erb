<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
  </div>
  <p>Know if something gets lost in the mail.</p>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="name_box">
          Description
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="user_id_box">
          
        </label>

        <input type="hidden" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="arrive_on_box" name="query_arrive_on">
      </div>

      <div>
        <label for="content_box">
          Details
        </label>

        <textarea id="content_box" name="query_content" rows="3"></textarea>
      </div>

      <div>
        <label for="status_box">
        
        </label>

        <input type="hidden" id="status_box" name="query_status">
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div class="waiting_on" style="background: lightgoldenrodyellow">
    <h2>Waiting on</h2>
    <% @list_of_packages.each do |a_package| %>
      <ul>
        <li>
          <div>
            <%= a_package.name %>
          </div>
          <div>
              Supposed to arrive on <%= a_package.arrive_on %>
          </div>
          <div>
            <%= a_package.content %>
          </div>
          <div>
            <form action="/modify_delivery/<%= a_package.id %>" method="post">
              <input type="hidden" name="query_status" value="received">
              <button>Mark as received</button>
            </form>
          </div>
          <br>
        </li>
      </ul>
    <% end %>  
  </div>
</div>
